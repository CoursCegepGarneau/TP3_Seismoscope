<UserControl x:Class="Seismoscope.View.SensorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seismoscope.View"
        mc:Ignorable="d"
        d:DesignHeight="400" d:DesignWidth="800"
        Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Accueil" Margin="10" Height="25" Command="{Binding NavigateToHomeViewCommand}"/>
            <Button Content="Activer/Désactiver" Margin="5,15,5,5" Command="{Binding UpdateSensorStatusCommand}" />
            <Button Content="Modifier Fréquence" Margin="5,15,5,5" Command="{Binding ChangeFrequencyCommand}" />
            <Button Content="Modifier Seuil" Margin="5" Command="{Binding ChangeTresholdCommand}" />
            <Button Content="Ajouter Capteur" Margin="5,15,5,5" Command="{Binding AddSensorCommand}" />
            <Button Content="Supprimer Capteur" Margin="5" Command="{Binding DeleteSensorCommand}" />
        </StackPanel>
        <DataGrid Grid.Column="1" ItemsSource="{Binding Sensors}" SelectedItem="{Binding SelectedSensor}" AutoGenerateColumns="False" IsReadOnly="true">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Fréquence" Binding="{Binding Frequency}" Width="100"/>
                <DataGridTextColumn Header="Seuil" Binding="{Binding Treshold}" Width="100"/>
                <DataGridTextColumn Header="État" Binding="{Binding SensorStatus}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
